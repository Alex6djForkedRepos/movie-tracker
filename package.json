{
  "name": "movie-tracker",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build --filter=frontendVue --filter=backend",
    "dev": "turbo run dev --filter=frontendVue --filter=backend",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "postbuild": "turbo run postbuild",
    "db:push": "turbo db:push"
  },
  "devDependencies": {
    "eslint": "^8.48.0",
    "prettier": "^3.0.3",
    "turbo": "latest",
    "typescript": "^5.1.6"
  },
  "packageManager": "pnpm@8.9.0"
}
